{
  "type": "Screen",
  "attributes": {
    "id": "page.settings.store.product",
    "safe": false
  },
  "children": [
    {
      "type": "Container",
      "attributes": {},
      "children": [
        {
          "type": "Flexible",
          "attributes": {
            "flex": 1,
            "fit": "Tight"
          },
          "children": [
            {
              "type": "ListView",
              "attributes": {
                "separator": true,
                "separatorColor": "#8c8c8c"
              },
              "children": [
                {
                  "type": "Container",
                  "attributes": {
                    "alignment": "Center"
                  },
                  "children": [
                    {
                      "type": "Column",
                      "attributes": {
                        "mainAxisSize": "min"
                      },
                      "children": [
                        {
                          "type": "Image",
                          "attributes": {
                            "url": "https://int-wutsi.s3.amazonaws.com/static/wutsi-store-bff/images/nopicture.jpeg",
                            "width": 150.0,
                            "height": 150.0
                          },
                          "children": []
                        },
                        {
                          "type": "Button",
                          "attributes": {
                            "caption": "Upload Picture",
                            "padding": 10.0,
                            "type": "Text"
                          },
                          "children": [],
                          "action": {
                            "type": "Route",
                            "url": "http://localhost:0/settings/store/picture"
                          }
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "ListItem",
                  "attributes": {
                    "caption": "Titre",
                    "subCaption": "Sample product",
                    "trailing": {
                      "type": "Icon",
                      "attributes": {
                        "code": "e21a",
                        "size": 24.0,
                        "color": "#000000"
                      },
                      "children": []
                    }
                  },
                  "children": [],
                  "action": {
                    "type": "Route",
                    "url": "/settings/store/product/title"
                  }
                },
                {
                  "type": "ListItem",
                  "attributes": {
                    "caption": "Price",
                    "subCaption": "7,000 CFA",
                    "trailing": {
                      "type": "Icon",
                      "attributes": {
                        "code": "e21a",
                        "size": 24.0,
                        "color": "#000000"
                      },
                      "children": []
                    }
                  },
                  "children": [],
                  "action": {
                    "type": "Route",
                    "url": "/settings/store/product/price"
                  }
                },
                {
                  "type": "ListItem",
                  "attributes": {
                    "caption": "Summary",
                    "subCaption": "Summary of product",
                    "trailing": {
                      "type": "Icon",
                      "attributes": {
                        "code": "e21a",
                        "size": 24.0,
                        "color": "#000000"
                      },
                      "children": []
                    }
                  },
                  "children": [],
                  "action": {
                    "type": "Route",
                    "url": "/settings/store/product/summary"
                  }
                },
                {
                  "type": "ListItem",
                  "attributes": {
                    "caption": "Description",
                    "subCaption": "This is a long description of the product",
                    "trailing": {
                      "type": "Icon",
                      "attributes": {
                        "code": "e21a",
                        "size": 24.0,
                        "color": "#000000"
                      },
                      "children": []
                    }
                  },
                  "children": [],
                  "action": {
                    "type": "Route",
                    "url": "/settings/store/product/description"
                  }
                },
                {
                  "type": "ListItemSwitch",
                  "attributes": {
                    "caption": "Visible",
                    "subCaption": "Customers to see this product?",
                    "name": "value",
                    "selected": true
                  },
                  "children": [],
                  "action": {
                    "type": "Command",
                    "url": "http://localhost:0/commands/update-product-attribute?name=visible"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "appBar": {
    "type": "AppBar",
    "attributes": {
      "title": "Product",
      "elevation": 0.0,
      "backgroundColor": "#FFFFFF",
      "foregroundColor": "#000000"
    },
    "children": []
  }
}
